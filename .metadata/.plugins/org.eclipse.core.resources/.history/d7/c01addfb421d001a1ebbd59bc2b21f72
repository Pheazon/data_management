<h4>Revenue by flight</h4>

<%
	try {
		String Flight = request.getParameter("flight");
		out.println("Flight: " + Flight);

		ApplicationDB db = new ApplicationDB();
		Connection con = db.getConnection();
		PreparedStatement ps = null;
		Class.forName("com.mysql.jdbc.Driver").newInstance();
		Connection conn = db.getConnection();

		Statement statement = conn.createStatement();
		String command = "SELECT COUNT(DISTINCT ReservationNumber) count FROM Reservation WHERE CONCAT(airlineID, flightNumber) = '"
				+ Flight + "'";
		ResultSet result = statement.executeQuery(command);
		if (result.next()) {
			int count = result.getInt("count");
			int sum = count * 50;
			out.println("<br><br>Number of reservations " + count);
			out.println("<br><br>Revenue generated by this flight $ " + sum);
		}
		result.close();
		statement.close();
		con.close();
	} catch (Exception e) {

	}
%>


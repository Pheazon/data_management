	<% if (session.getAttribute("user") == null) { 
    		response.sendRedirect("login.jsp");
       } else { 


		   	try {
	    		ApplicationDB db = new ApplicationDB();	
	    		Connection conn = db.getConnection();
	    	    
				PreparedStatement ps = null;
				ResultSet rs = null;
				Class.forName("com.mysql.jdbc.Driver").newInstance();
				
				String user = (session.getAttribute("user")).toString();
				String accountQuery = "SELECT * FROM Account WHERE username=?";
				
				ps = conn.prepareStatement(accountQuery);
				ps.setString(1, user);
				rs = ps.executeQuery();
				rs.next();
				
				if (rs.getInt("access_level") != 2) {
    				response.sendRedirect("index.jsp");
 	    			return;
    			} 
			} catch (SQLException e) {
				out.print("<p>Error occured connecting to server.</p>");
			    e.printStackTrace();
			} %>
		    	<h2>Customer Rep account</h2>
		        <form action="customerRepHandler.jsp" method="POST">
		        
		            <label for="username">Username</label>
		            <input type="text" name="username" id="username" placeholder="Username"> <br>
		    
		            <label>Password</label>
		            <input type="password" name="password" placeholder="Password"> <br>
		    
		            <input type="submit" value="Create Account">
		        </form>
	<% } %>
